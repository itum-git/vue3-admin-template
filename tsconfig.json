{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "/*": ["/*"],
      "@/*": ["src/*"]
    },
    "types": [
      "node",
      "vite/client",
      "element-plus/global",
    ],
    "typeRoots": ["./node_modules/@types/", "./types/"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "mock/**/*.ts", "types/**/*.d.ts", "./config/auto-imports.d.ts", "src/layout/components/.vue.ts"],
  "exclude": ["dist", "node_modules"]
}
